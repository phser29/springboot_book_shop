<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.api.mapper.MemberMapper">
	
	<insert id="memberJoin">
		INSERT INTO 
			book_member
		VALUES
			(
				#{memberId}
				,#{memberPw}
				,#{memberName}
				,#{memberMail}
				,#{memberAddr1}
				,#{memberAddr2}
				,#{memberAddr3}
				,0
				,now()
				,10000
				,5000
			)
	</insert>
	
	<select id="memberidCheck" resultType="int">
		SELECT 
			COUNT(*)
		FROM
			book_member
		WHERE memberId = #{memberId}
	</select>
	
	
	
</mapper>